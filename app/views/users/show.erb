	content:'\2714';
	text-indent: .9em;
	color: #C2C2C2;
}
input.radio:hover:not(:checked) ~ label { color: #888; }
/* Checked */
input.radio:checked ~ label:before {
	content:'\2714';
	text-indent: .9em;
	color: #9CE2AE;
	background-color: #4DCB6D;
}
